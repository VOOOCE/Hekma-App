        <ImageView
            android:id="@+id/top"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:background="@drawable/top_header"
            android:backgroundTint="@color/baseColor"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:id="@+id/container_circle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/circle_radius"
            android:padding="7dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/circleImageView"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:scaleType="centerCrop"
                android:src="@drawable/file" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/font"
            android:text="محمد محمود"
            android:textSize="21sp"
            android:layout_marginStart="12dp"
            app:layout_constraintBottom_toBottomOf="@+id/container_circle"
            app:layout_constraintStart_toEndOf="@+id/container_circle"
            app:layout_constraintTop_toTopOf="@+id/container_circle" />

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="24dp"
            android:layout_marginHorizontal="8dp"
            android:background="@color/baseColor"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/container_circle" />

        <LinearLayout
            android:id="@+id/linearLayout4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="12dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/no_effect"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view">

            <androidx.cardview.widget.CardView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginVertical="4dp"
                android:layout_marginStart="4dp"
                app:cardBackgroundColor="@color/sub_base_color"
                app:cardCornerRadius="8dp">

                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_margin="2dp"
                    android:background="@drawable/background_search"
                    android:backgroundTint="@color/baseColor"
                    android:src="@drawable/person_icon"
                    app:tint="@color/black" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:text="@string/setting_1"
                android:textColor="@color/black"
                android:textSize="21sp" />

            <ImageView
                android:id="@+id/back1"
                style="@style/button" />

        </LinearLayout>

